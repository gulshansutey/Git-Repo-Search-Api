<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="gulshansutey.gitreposearch.ContributorDetailsActivity">


    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/pb_contributor_details"
        android:indeterminate="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="100dp"
        android:id="@+id/iv_contributor_avatar"
    android:layout_margin="10dp"
        android:layout_height="100dp" />


    <TextView
        android:layout_width="wrap_content"
        android:text="Repos: "
        android:textColor="@color/color_txt_black"
      android:padding="10dp"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/rv_contributor_repos"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
